-# frozen_string_literal: true
= simple_form_for(@orderline) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :Product
    = f.association :order
    = f.input :totalPrice
    = f.input :quantity

  .form-actions
    = f.button :submit
