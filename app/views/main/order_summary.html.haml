%h1 order summary

%p 
	-# puts @selected_seat
	- if @selected_seat != nil
		-@selected_seat.each do |seat, type|
			= render "ticketCard", seat: seat, type: type
	- if session[:beverage] != nil
		-session[:beverage].each do |key, value|
			= render "beverageCardSummary", name: value[0], amount: value[1].to_i, price: value[2].to_i
%p
	.row.justify-content-between.align-items-center
		.col
			TOTAL PRICE: 
			= @total_price
		.col-1
			= link_to "confirm", createorder_path,class: "btn btn-primary"