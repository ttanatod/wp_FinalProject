-# frozen_string_literal: true
= simple_form_for(@ticket) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :timetable
    = f.association :chair

  .form-actions
    = f.button :submit
