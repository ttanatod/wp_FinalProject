-# frozen_string_literal: true
= simple_form_for(@user) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :username
    = f.input :email
    = f.input :password_digest
    = f.input :firstname
    = f.input :lastname

  .form-actions
    = f.button :submit
